            <TreeView ItemsSource="{Binding BindingPropertyLists,Mode=OneWay}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type local:PropertyList}"
                                              ItemsSource="{Binding PropertyLines}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type local:PropertyLine}">
                        <Grid x:Name="Grid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}"
                                       Width="150"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap" />
                            <ItemsControl Grid.Column="1"
                                          ItemsSource="{Binding ValueList}"
                                          x:Name="ItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="150">
                                            <TextBlock Text="{Binding}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Name}"
                                         Value="车型名称">
                                <Setter TargetName="ItemsControl"
                                        Property="ItemTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <Grid Width="150">
                                                <TextBlock Text="{Binding}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis" />
                                                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                                        Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Right"
                                                        Content="{materialDesign:PackIcon Close}"
                                                        Command="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType=Window},Path=DataContext.RemoveModelCommand}"
                                                        CommandParameter="{Binding}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
